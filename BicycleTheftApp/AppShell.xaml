<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BicycleTheftApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BicycleTheftApp"
    Shell.FlyoutBehavior="Disabled"
    Title="BicycleTheftApp">

    <Shell.TitleView>
        <HorizontalStackLayout>
            <Label
                Text="自転車盗難分布図 - BicycleTheftApp" VerticalOptions="Center" FontSize="20" TextColor="Aquamarine" FontAttributes="Bold"></Label>
        </HorizontalStackLayout>
    </Shell.TitleView>

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

</Shell>
